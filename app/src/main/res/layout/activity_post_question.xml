<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    tools:context=".activity.PostQuestionActivity">
    <ImageView
        android:id="@+id/post_question_back"
        android:layout_width="67dp"
        android:layout_height="43dp"
        android:src="@drawable/ic_back" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/post_question_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/post_question_label"
                android:layout_marginLeft="7dp"
                android:text="问题:"
                android:gravity="start|center"/>
            <EditText
                android:id="@+id/post_question_title"
                android:layout_below="@id/post_question_label"
                android:layout_width="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:background="@drawable/login_edittext_bg"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/post_question_b"
            android:layout_below="@id/post_question_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/post_question_info"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="问题描述："
                android:layout_marginLeft="7dp"
                android:gravity="start|center"/>
            <EditText
                android:id="@+id/post_question_content"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:enabled="true"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:layout_below="@id/post_question_info"
                android:background="@drawable/login_edittext_bg"
                android:layout_margin="7dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/post_question_b"
            android:id="@+id/post_question_bc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/post_question_bt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:text="悬赏金额："/>
            <EditText
                android:id="@+id/post_question_pay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:enabled="true"
                android:inputType="number"
                android:minLines="1"
                android:maxLines="1"
                android:scrollbars="vertical"
                android:layout_toRightOf="@id/post_question_bt"
                android:background="@drawable/login_edittext_bg"
                android:layout_margin="7dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/post_question_bc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/post_submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shap"
                android:layout_margin="7dp"
                android:text="发布"/>
            <Button
                android:layout_toRightOf="@id/post_submit_btn"
                android:id="@+id/post_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shap"
                android:text="取消"
                android:layout_margin="7dp"/>
        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</LinearLayout>