<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="2dp">
    <include layout="@layout/line_all" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/class_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/c3"/>
        <TextView
            android:id="@+id/class_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="C++" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/class_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="C++精品课" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/class_teacher"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="Cays"/>
            <TextView
                android:id="@+id/class_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="98分钟"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/class_price"
                android:layout_width="106dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_shap"
                android:gravity="center"
                android:text="$58.00"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/class_type"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="普通" />
    </LinearLayout>
    </LinearLayout>
    <include layout="@layout/line_all" />
</android.support.v7.widget.CardView>