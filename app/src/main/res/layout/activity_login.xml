<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.easyresearch.activity.LoginActivity"
    android:background="@drawable/login_bg">

    <ImageView
        android:id="@+id/login_back"
        android:layout_width="67dp"
        android:layout_height="43dp"
        android:src="@drawable/ic_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_div"
        android:padding="15dip"
        android:layout_margin="15dip"
        android:background="@drawable/login_div_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/login_user"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/login_user"
                android:id="@+id/login_user_input"/>
            <View
                android:id="@+id/viewName1"
                android:layout_width="1dip"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/login_user_input"
                android:background="#d1caca" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/login_user_name"
                android:hint="请输入用户名"
                android:layout_toRightOf="@id/viewName1"
                android:background="@drawable/login_edittext_bg"
                android:inputType="text"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/login_password"
            android:layout_below="@id/login_user"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/login_password_input"
                android:layout_centerVertical="true"
                android:src="@drawable/login_lock"/>
            <View
                android:id="@+id/viewName2"
                android:layout_width="1dip"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/login_password_input"
                android:background="#b7b3b3" />
            <EditText
                android:id="@+id/login_user_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请输入密码"
                android:layout_toRightOf="@id/viewName2"
                android:inputType="textPassword"
                android:background="@drawable/login_edittext_bg"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_check"
            android:layout_below="@id/login_password">
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/login_check_autologin"
                android:text="自动登录"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn"
            android:layout_below="@id/login_check">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="登录"
                android:id="@+id/login_login_btn"
                android:layout_margin="5dp"
                android:background="#787575"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注册"
                android:id="@+id/login_register_btn"
                android:layout_margin="5dp"
                android:background="#787575"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to EasyResearch"
            android:gravity="center"
            android:textSize="25dp"/>
    </RelativeLayout>
</LinearLayout>
